---
import Logo from './logo.astro'
import A from './a.astro'
import P from './p.astro'

const cx = {
  footer: 'left-0 right-0 absolute w-full font-light py-16 text-center italic',
  copyright: 'my-3 italic',
  a: 'mx-2 no-underline hover:underline',
  logo: 'inline-block mx-1 stroke-current',
  links: 'my-2'
}
---
<footer class={cx.footer}>
  <div class={cx.links}>
    <A
      href='/privacy'
      title='privacy policy'
    >
      your privacy is important
    </A>
  </div>
  <P className={cx.copyright}>
    Â© girlfriend technology {new Date().getFullYear()}
  </P>
  <A
    href='https://melaniekat.com'
    title='with love from melanie kat'
    className={cx.a}
  >
    with
    <Logo
      className={cx.logo}
      width='1.5rem'
    />
