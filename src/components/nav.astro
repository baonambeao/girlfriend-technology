---
import NavItem from './nav-item.astro'
import Logo from './logo.astro'

const cx = {
  header: 'font-light mb-4 h-8',
  nav: 'p-4 fixed block w-full left-0 flex justify-between bg-white-50',
  name: 'text-sm md:text-base mr-4 italic no-underline hover:underline block',
  left: 'flex items-center',
  right: 'grow flex items-center',
  logo: 'align-middle inline-block mr-1 stroke-current'
}
---
<header class={cx.header}>
  <nav class={cx.nav}>
    <div class={cx.left}>
      <NavItem
        className={cx.name}
        href='/'
        title='girlfriend technology'
      >
        <Logo
          className={cx.logo}
          width='1.5rem'
        />
        girlfriend technology
      </NavItem>
    </div>
    <div class={cx.right}>
      <NavItem
        href='/projects'
        title='projects'
      >
        projects
      </NavItem>
      <NavItem
        href='/labs'
        title='labs'
      >
        labs
      </NavItem>
    </div>
  </nav>
</header>

