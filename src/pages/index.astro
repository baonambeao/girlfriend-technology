---
import Layout from '../layouts/base-layout.astro'
import Nav from '../components/nav.astro'
import Footer from '../components/footer.astro'
import BigContent from '../components/big-content.astro'
import BoxedText from '../components/boxed-text.astro'
import Logo from '../public/mask-icon.svg'

const cx = {
  main: 'mw8 center',
  content: 'fw9 i f1 ph3 pv6 mw6 tc center lh-title hyphens-auto',
  logo: 'v-mid stroke-current'
}

const theme = {
  light: '#ff72c6',
  dark: '#3a0023'
}
---
<Layout className={cx.main} {...theme}>
  <Nav />
  <BigContent class={cx.content}>
    <Logo class={`${cx.logo} trace`} />
    <BoxedText {...theme}>
      apps for us
    </BoxedText>
  </BigContent>
  <Footer />
</Layout>

